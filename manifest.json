{
  "manifest_version": 2,
  "name": "ReadAct",
  "version": "1.0",

  "description": "ReadAct processes new articles to identify political candidates, initiatives, and bias to motivate people to act on what they read!",

  "homepage_url": "https://github.com/abhishekbabu/ReadAct",

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": ["alarms", "storage"],
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "content_security_policy": "script-src 'self' https://d3js.org/d3.v5.min.js 'unsafe-eval'; object-src 'self'"
}